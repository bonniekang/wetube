mixin videoBlock(video)
    a(href=`/videos/${video.id}`).video-mixin
        div.video-mixin__thumb
            video(src="/" + video.fileUrl)
        div.video-mixin__data#video__data
            if video.owner.avatarUrl === ""
                img.header__avatar(src="https://icon-library.com/images/anonymous-user-icon/anonymous-user-icon-2.jpg")
            else 
                if video.owner.avatarUrl
                    if video.owner.avatarUrl.includes("github")
                        img.header__avatar(src=video.owner.avatarUrl)
                    else 
                        img.header__avatar(src=video.owner.avatarUrl)
            span.video-mixin__title#video__data-title=video.title
        div.video-mixin__meta#video-mixin__meta
            div=video.owner.name
            div 
                div #{video.meta.views} views
                em  â€¢ 
                span.video__createdAt=new Date(video.createdAt).toLocaleDateString("en", { year: 'numeric', month: 'numeric', day: 'numeric'})